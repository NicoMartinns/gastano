<%= form_with(model: receitum, class: "contents") do |form| %>
  <% if receitum.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(receitum.errors.count, "error") %> prohibited this receitum from being saved:</h2>

      <ul class="list-disc ml-6">
        <% receitum.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :titulo %>
    <%= form.text_field :titulo, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": receitum.errors[:titulo].none?, "border-red-400 focus:outline-red-600": receitum.errors[:titulo].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :valor %>
    <%= form.text_field :valor, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": receitum.errors[:valor].none?, "border-red-400 focus:outline-red-600": receitum.errors[:valor].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :data %>
    <%= form.date_field :data, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": receitum.errors[:data].none?, "border-red-400 focus:outline-red-600": receitum.errors[:data].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :categoria %>
    <%= form.text_field :categoria, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": receitum.errors[:categoria].none?, "border-red-400 focus:outline-red-600": receitum.errors[:categoria].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
